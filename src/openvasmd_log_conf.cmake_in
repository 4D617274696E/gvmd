# OpenVAS Manager logging configuration
#
# WARNING: Setting the level of any group (besides event*) to include debug
#          may reveal passwords in the logs.

[md   main]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=${OPENVAS_LOG_DIR}/openvasmd.log
level=7

[md   comm]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=${OPENVAS_LOG_DIR}/openvasmd.log
level=7

[md   file]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=${OPENVAS_LOG_DIR}/openvasmd.log
level=7

[md manage]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=${OPENVAS_LOG_DIR}/openvasmd.log
level=7

[md    omp]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=${OPENVAS_LOG_DIR}/openvasmd.log
level=7

[md    otp]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=${OPENVAS_LOG_DIR}/openvasmd.log
level=7

[event syslog]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=syslog
syslog_facility=daemon
level=128

[event snmp]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=syslog
syslog_facility=local0
level=128

[*]
prepend=%t %p
prepend_time_format=%Y-%m-%d %Hh%M.%S %Z
file=${OPENVAS_LOG_DIR}/openvasmd.log
level=7
